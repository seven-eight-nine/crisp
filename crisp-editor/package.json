{
  "name": "crisp-editor",
  "displayName": "Crisp - Behavior Tree DSL",
  "description": "Crisp DSL のための言語サポートとビジュアルツリーエディタ。テキスト編集とビジュアルツリー編集の双方向同期を実現する統合開発環境。",
  "version": "0.1.0",
  "publisher": "crisp",
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Visualization"
  ],
  "activationEvents": [
    "onLanguage:crisp",
    "onCommand:crisp.openTreeView"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "crisp",
        "aliases": [
          "Crisp"
        ],
        "extensions": [
          ".crisp"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "crisp",
        "scopeName": "source.crisp",
        "path": "./syntaxes/crisp.tmLanguage.json"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "crispExplorer",
          "title": "Crisp",
          "icon": "$(type-hierarchy)"
        }
      ]
    },
    "views": {
      "crispExplorer": [
        {
          "type": "webview",
          "id": "crispTreeView",
          "name": "Tree View",
          "when": "resourceLangId == crisp"
        }
      ]
    },
    "commands": [
      {
        "command": "crisp.openTreeView",
        "title": "Open Tree View",
        "category": "Crisp",
        "icon": "$(type-hierarchy)"
      },
      {
        "command": "crisp.fitTree",
        "title": "Fit Tree to View",
        "category": "Crisp"
      }
    ],
    "keybindings": [
      {
        "command": "crisp.fitTree",
        "key": "ctrl+shift+f",
        "mac": "cmd+shift+f",
        "when": "resourceLangId == crisp"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "crisp.openTreeView",
          "when": "resourceLangId == crisp",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "crisp.openTreeView",
          "when": "resourceLangId == crisp"
        }
      ]
    },
    "configuration": {
      "title": "Crisp",
      "properties": {
        "crisp.lsp.path": {
          "type": "string",
          "default": "",
          "description": "LSP サーバーの実行ファイルパス。空の場合は拡張に同梱されたサーバーを使用する。"
        },
        "crisp.lsp.args": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "LSP サーバーに渡す追加引数。"
        },
        "crisp.treeView.defaultOpen": {
          "type": "boolean",
          "default": false,
          "description": ".crisp ファイルを開いた時に自動でツリービューを開くかどうか。"
        },
        "crisp.treeView.layout": {
          "type": "string",
          "enum": [
            "side",
            "below"
          ],
          "default": "side",
          "description": "ツリービューの配置位置。side = エディタ横、below = エディタ下。"
        },
        "crisp.treeView.showMinimap": {
          "type": "boolean",
          "default": true,
          "description": "ツリービューにミニマップを表示するかどうか。"
        },
        "crisp.treeView.showPropertyPanel": {
          "type": "boolean",
          "default": true,
          "description": "ツリービューにプロパティパネルを表示するかどうか。"
        },
        "crisp.treeView.animateDebugState": {
          "type": "boolean",
          "default": true,
          "description": "デバッグ時にノード状態のアニメーションを表示するかどうか。"
        },
        "crisp.treeView.autoFitOnChange": {
          "type": "boolean",
          "default": false,
          "description": "テキスト変更時にツリー全体がビューに収まるよう自動ズームするかどうか。"
        },
        "crisp.treeView.nodeSpacing.horizontal": {
          "type": "number",
          "default": 16,
          "description": "ノード間の水平方向のスペース（ピクセル）。"
        },
        "crisp.treeView.nodeSpacing.vertical": {
          "type": "number",
          "default": 60,
          "description": "ノード間の垂直方向のスペース（ピクセル）。"
        },
        "crisp.formatter.indentSize": {
          "type": "number",
          "default": 2,
          "description": "フォーマッタのインデントサイズ（スペース数）。"
        },
        "crisp.formatter.maxLineWidth": {
          "type": "number",
          "default": 80,
          "description": "フォーマッタの最大行幅（文字数）。"
        },
        "crisp.debug.port": {
          "type": "number",
          "default": 9229,
          "description": "Crisp デバッグアダプタのポート番号。"
        }
      }
    },
    "breakpoints": [
      {
        "language": "crisp"
      }
    ],
    "debuggers": [
      {
        "type": "crisp",
        "label": "Crisp Behavior Tree",
        "configurationAttributes": {
          "attach": {
            "properties": {
              "host": {
                "type": "string",
                "default": "localhost",
                "description": "デバッグ対象のホスト名。"
              },
              "port": {
                "type": "number",
                "default": 9229,
                "description": "デバッグ対象のポート番号。"
              },
              "crispFile": {
                "type": "string",
                "description": "デバッグ対象の .crisp ファイルパス。"
              }
            }
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "watch": "webpack --mode development --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "package": "vsce package"
  },
  "devDependencies": {
    "@testing-library/react": "^14.1.2",
    "@types/d3": "^7.4.3",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.41",
    "@types/react-dom": "^18.2.17",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/test-electron": "^2.3.8",
    "css-loader": "^6.8.1",
    "eslint": "^8.54.0",
    "jsdom": "^23.0.1",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.2",
    "vitest": "^1.1.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "d3": "^7.8.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vscode-languageclient": "^9.0.1",
    "zustand": "^4.4.7"
  }
}
